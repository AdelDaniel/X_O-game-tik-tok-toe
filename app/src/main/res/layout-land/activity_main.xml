<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/restart_and_draw"
        android:layout_width="165dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:onClick="restartAndDrawClicked"
        android:text="Restart And Draw"
        app:layout_constraintBottom_toTopOf="@+id/restart_only"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.888" />

    <Button
        android:id="@+id/restart_only"
        android:layout_width="165dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="176dp"
        android:layout_weight="1"
        android:width="165dp"
        android:onClick="restartOnlyClicked"
        android:text="Restart Only "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".MainActivity">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|center_horizontal|center_vertical">

            <Button
                android:id="@+id/bu0x0"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_margin="2dp"
                android:onClick="buttonClicked"
                android:textColor="#FBF8F8"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bu0x1"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_margin="2dp"
                android:onClick="buttonClicked"
                android:textColor="#FBF8F8"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bu0x2"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_margin="2dp"
                android:onClick="buttonClicked"
                android:textColor="#FBF8F8"
                android:textSize="30sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|center_horizontal|center_vertical">

            <Button
                android:id="@+id/bu1x0"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_margin="2dp"
                android:onClick="buttonClicked"
                android:textColor="#FBF8F8"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bu1x1"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_margin="2dp"
                android:onClick="buttonClicked"
                android:textColor="#FBF8F8"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bu1x2"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_margin="2dp"
                android:onClick="buttonClicked"
                android:textColor="#FBF8F8"
                android:textSize="30sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|center_horizontal|center_vertical">

            <Button
                android:id="@+id/bu2x0"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_margin="2dp"
                android:onClick="buttonClicked"
                android:textColor="#FBF8F8"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bu2x1"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_margin="2dp"
                android:onClick="buttonClicked"
                android:textColor="#FBF8F8"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bu2x2"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_margin="2dp"
                android:onClick="buttonClicked"
                android:textColor="#FBF8F8"
                android:textSize="30sp"
                android:textStyle="bold" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="174dp"
        android:layout_height="124dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restart_only"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/first_winner_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5pt"
            android:text="Player 1 Wins:"
            android:textColor="#0E0E0E" />

        <TextView
            android:id="@+id/second_winner_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5pt"
            android:text="Player 2 Wins:"
            android:textColor="#0E0E0E" />

        <TextView
            android:id="@+id/draw_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5pt"
            android:text="Draws:"
            android:textColor="#0E0E0E" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


