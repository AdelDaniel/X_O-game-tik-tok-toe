<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <Button
        android:id="@+id/restart_and_draw"
        android:text="Restart And Draw"
        android:onClick="restartAndDrawClicked"
        android:layout_width="161dp"
        android:layout_height="47dp"
        android:layout_marginBottom="44dp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintVertical_bias="0.700" />

    <Button
        android:id="@+id/restart_only"
        android:text="Restart Only "
        android:onClick="restartOnlyClicked"
        android:layout_width="161dp"
        android:layout_height="47dp"
        android:layout_marginBottom="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintVertical_bias="0.700" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".MainActivity">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|center_horizontal|center_vertical">

            <Button
                android:id="@+id/bu0x0"
                android:layout_width="55pt"
                android:layout_height="55pt"
                android:layout_margin="2dp"
                android:onClick="buttonClicked"
                android:textColor="#FBF8F8"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bu0x1"
                android:layout_width="55pt"
                android:layout_height="55pt"
                android:layout_margin="2dp"
                android:onClick="buttonClicked"
                android:textColor="#FBF8F8"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bu0x2"
                android:layout_width="55pt"
                android:layout_height="55pt"
                android:layout_margin="2dp"
                android:onClick="buttonClicked"
                android:textColor="#FBF8F8"
                android:textSize="30sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|center_horizontal|center_vertical">

            <Button
                android:id="@+id/bu1x0"
                android:layout_width="55pt"
                android:layout_height="55pt"
                android:layout_margin="2dp"
                android:onClick="buttonClicked"
                android:textColor="#FBF8F8"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bu1x1"
                android:layout_width="55pt"
                android:layout_height="55pt"
                android:layout_margin="2dp"
                android:onClick="buttonClicked"
                android:textColor="#FBF8F8"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bu1x2"
                android:layout_width="55pt"
                android:layout_height="55pt"
                android:layout_margin="2dp"
                android:onClick="buttonClicked"
                android:textColor="#FBF8F8"
                android:textSize="30sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|center_horizontal|center_vertical"
            android:orientation="vertical">

            <Button
                android:id="@+id/bu2x0"
                android:layout_width="55pt"
                android:layout_height="55pt"
                android:layout_margin="2dp"
                android:onClick="buttonClicked"
                android:textColor="#FBF8F8"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bu2x1"
                android:layout_width="55pt"
                android:layout_height="55pt"
                android:layout_margin="2dp"
                android:onClick="buttonClicked"
                android:textColor="#FBF8F8"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bu2x2"
                android:layout_width="55pt"
                android:layout_height="55pt"
                android:layout_margin="2dp"
                android:onClick="buttonClicked"
                android:textColor="#FBF8F8"
                android:textSize="30sp"
                android:textStyle="bold" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="335dp"
        android:layout_height="145dp"
        android:layout_margin="15pt"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        app:layout_constraintVertical_bias="0.037">

        <TextView
            android:id="@+id/first_winner_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5pt"
            android:text="Player 1 Wins:"
            android:textColor="#0E0E0E" />

        <TextView
            android:id="@+id/second_winner_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5pt"
            android:text="Player 2 Wins:"
            android:textColor="#0E0E0E" />

        <TextView
            android:id="@+id/draw_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5pt"
            android:text="Draws:"
            android:textColor="#0E0E0E" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


